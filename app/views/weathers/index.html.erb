<p id="notice"><%= notice %></p>

<h1>Weathers</h1>

<% if @weather['main'] %>
 <p>Current Weather in New York City </p>
 <p>Temperature: <%= @weather['main']['temp'] - 273.15 %>Â°C></p>
 <p>Humidity: <%= @weather['main']['humidity'] %> </p>
 <p>Wind Speed: <%= @weather['wind']['speed'] * 3.6 %> km/h </p>
<% else %>
 <code> Please make sure you've updated your "api-key" in controllers/weatherController.rb </code>
<% end %>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Temperature</th>
      <th>Humidity</th>
      <th>Windspeed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.location %></td>
        <td><%= weather.temperature %></td>
        <td><%= weather.humidity %></td>
        <td><%= weather.windspeed %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

